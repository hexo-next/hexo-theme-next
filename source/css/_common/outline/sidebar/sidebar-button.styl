.sidebar .sidebar-button {
  &:not(:first-child) {
    margin-top: 15px;
  }

  button {
    button();
    border: 1px solid $orange;
    border-radius: 4px;
    color: $orange;

    .fa, .fab, .far, .fas {
      margin-right: 5px;
    }

    &:hover {
      background: $orange;
      border: 1px solid $orange;
      color: white;

      .fa, .fab, .far, .fas {
        color: white;
      }
    }
  }
}
